<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:io="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.io2014.DetailActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:tint="@color/photo_tint"
                android:transitionName="photo_hero" />

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="@dimen/floating_button_size"
                android:layout_height="@dimen/floating_button_size"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:alpha="0.0"
                android:background="@drawable/info_background"
                android:elevation="@dimen/button_elevation"
                android:stateListAnimator="@anim/button_raise"
                android:onClick="showInformation"
                android:src="@drawable/ic_info" />

            <ImageButton
                android:id="@+id/star_button"
                android:layout_width="@dimen/floating_button_size"
                android:layout_height="@dimen/floating_button_size"
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:alpha="0.0"
                android:background="@drawable/info_background"
                android:elevation="4dp"
                android:stateListAnimator="@anim/button_raise"
                android:onClick="showStar"
                android:src="@drawable/ic_star" />

            <FrameLayout
                android:id="@+id/information_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    map:uiRotateGestures="false"
                    map:uiScrollGestures="false"
                    map:uiTiltGestures="false"
                    map:uiZoomControls="false"
                    map:uiZoomGestures="false" />

            </FrameLayout>

            <com.example.android.io2014.ui.AnimatedPathView
                android:id="@+id/star_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"

                io:duration="1000"
                io:fillColor="#ffffffff"
                io:fillDuration="500"
                io:fillOffset="400"
                io:phase="1.0"
                io:strokeColor="#ffffffff"
                io:strokeWidth="6dp"
                io:svgPath="@raw/star" />

        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="sans-serif-light"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.2"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>